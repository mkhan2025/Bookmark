<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:civ_border_color="#181717"
        android:src="@drawable/girl"
        app:civ_border_width="1dp"
        android:layout_margin="8dp"/>

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:padding="2dp"
        android:background="@drawable/profile_outline"
        android:id="@+id/activityTV"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:id = "@+id/usernameLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:layout_margin="8dp"
        android:layout_toEndOf="@id/profilePic"
        android:layout_toStartOf="@id/activityTV"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-light"
            android:id="@+id/usernameTV"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2h"
            android:textSize="12sp"
            android:textColor="#636E72"
            android:id="@+id/timeTV"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="location"
            android:textSize="14sp"
            android:textColor="#636E72"
            android:id="@+id/locationTV"
            android:layout_below="@id/timeTV"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/imageViewLayout"
        android:layout_below="@id/usernameLayout"
        >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@id/profilePic"
        android:scaleType="centerCrop"
        android:background="#F0F0F0"
        android:orientation="horizontal"
        android:id="@+id/imageView"
        android:layout_marginTop="8dp"/>

        <ImageButton
            android:id="@+id/trashBtn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/trash"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/bookmarkBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageViewLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/bookmark_home"
        android:scaleType="fitCenter"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="2dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/imageViewLayout"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_toStartOf="@id/bookmarkBtn">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/heart"
                android:id="@+id/likeBtn"
                android:layout_margin="2dp"
                android:scaleType="fitCenter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="14sp"
                android:textColor="#636E72"
                android:id="@+id/likeCountTV"
                android:layout_marginStart="0dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/comment"
                android:id="@+id/commentBtn"
                android:layout_margin="2dp"
                android:scaleType="fitCenter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="14sp"
                android:textColor="#636E72"
                android:id="@+id/commentCountTV"
                android:layout_marginStart="0dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/share"
                android:id="@+id/shareBtn"
                android:layout_margin="2dp"
                android:scaleType="fitCenter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textSize="14sp"
                android:textColor="#636E72"
                android:id="@+id/shareCountTV"
                android:layout_marginStart="0dp"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="3"
        android:paddingTop="3dp"
        android:paddingEnd="5dp"
        android:text="Description"
        android:textColor="#262626"
        android:textSize="14sp" />
</RelativeLayout>